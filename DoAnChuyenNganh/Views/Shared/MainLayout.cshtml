<body>

    <div class="site-wrap">


        <div class="site-navbar py-2">


            @*@using (Html.BeginForm("ViewProduct", "Product", FormMethod.Get))
                {
                    <p>
                        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                        <input type="submit" value="Tìm kiếm" />
                    </p>
                }*@
            <div class="search-wrap">
                <div class="container">
                    <a href="#" class="search-close js-search-close"><span class="icon-close2"></span></a>
                    <form action="#" method="post">
                        @*@Html.TextBox("SearchString", ViewBag.CurrentFilter as string)*@
                        <div class="form-inline">
                            <div class="input-group" data-widget="sidebar-search">
                                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                                <div class="input-group-append">
                                    <button class="btn btn-sidebar">
                                        <i class="fas fa-search fa-fw"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        @*<input type="submit" value="Tìm kiếm" />*@
                    </form>
                </div>
            </div>



            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="logo">
                        <div class="site-logo">
                            <a href="@Url.Action("Index", "Home")" class="js-logo-clone"> <strong class="text-primary">Minh</strong>Hoàng</a>
                        </div>
                    </div>


                    <div class="main-nav d-none d-lg-block">
                        <nav class="site-navigation text-right text-md-center" role="navigation">
                            <ul class="site-menu js-clone-nav d-none d-lg-block">
                                <li>@Html.ActionLink("Trang Chủ", "Index", "Home")</li>
                                <li>@Html.ActionLink("Của Hàng", "ViewProduct", "Product")</li>


                                @{ Html.RenderAction("RenderMenu", "Home");}



                                <li>@Html.ActionLink("Thông Tin Quầy Thuốc", "ViewAbout", "About")</li>
                                <li>@Html.ActionLink("Liên Lạc", "ViewContact", "Contact")</li>
                            </ul>
                        </nav>
                    </div>


                    <div class="icons">
                        <a href="#" class="icons-btn d-inline-block js-search-open"><span class="icon-search"></span></a>
                        <a href="cart.html" class="icons-btn d-inline-block bag">
                            <span class="icon-shopping-bag"></span>
                            <span class="number">2</span>
                        </a>
                        <a href="#" class="site-menu-toggle js-menu-toggle ml-3 d-inline-block d-lg-none">
                            <span class="icon-menu"></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>



        @RenderBody()
        @{ Html.RenderAction("RenderFooter", "Home");}

    </div>


    <script src="~/Assets/js/jquery-3.3.1.min.js"></script>
